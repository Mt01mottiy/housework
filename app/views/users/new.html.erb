<div class = "users-new-wrapper">
  <div class = "container">
    <%= form_for @user do |f| %>
    <div class = "form-row">
      <h1 class = "text-center">アカウントを新規登録します</h1>
        <div class = "form-group col-md-3 col-md-offset-3">
          <%= f.label :姓, class: "text-black"%>
          <%= f.text_field :myouzi, class: "form-control"%>
        </div>
        <div class = "form-group col-md-3">
          <%= f.label :名, class: "text-black"%>
          <%= f.text_field :namae, class: "form-control"%>
        </div>
        <div class = "form-group col-md-6 col-md-offset-3">
          <%= f.label :メールアドレス, class: "text-black"%>
          <%= f.text_field :email, class: "form-control"%>
        </div>
        <div class = "form-group col-md-6 col-md-offset-3">
          <%= f.label :パスワード, class: "text-black" %>
          <%= f.password_field :password, class: "form-control"%>
        </div>
        <div class = "form-group col-md-6 col-md-offset-3">
          <%= f.label :パスワード再確認, class: "text-black" %>
          <%= f.password_field :password_confirmation, class: "form-control"%>
        </div>
        
        
      <div class = "row">
        <div class = "col-md-4 col-md-offset-4">
          <%= f.submit "登録", class: "btn-block btn-white"%>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>